{
    "license": "MIT",
    "private": false,
    "bin": {"cruisepack": "jdeploy-bundle/jdeploy.js"},
    "author": "${developer.name}",
    "name": "cruise-pack",
    "description": "${project.description}",
    "scripts": {
        "package": "jdeploy package",
        "deploy": "jdeploy publish",
        "jinstall": "jdeploy install jcruisepack"
    },
    "repository": "${homepage}",
    "version": "${project.version}",
    "jdeploy": {
        "javaVersion": "17",
        "jar": "target/JCruisePack-${project.version}-exe.jar",
        "title": "JCruisePack",
        "bundles": ["mac-x64", "mac-arm64", "win", "linux"],
        "installers" : ["mac-x64", "mac-arm64", "win", "linux"]
    },
    "files": [
        "jdeploy-bundle"
    ],
    "devDependencies": {
        "jdeploy": "4.0.43"
    },
    "dependencies": {
        "command-exists-promise": "^2.0.2",
        "node-fetch": "2.6.7",
        "tar": "^4.4.8",
        "yauzl": "^2.10.0",
        "shelljs": "^0.8.4"
    },
    "homepage": "${homepage}",
    "publishConfig": {
        "access": "public"
    },
    "args": [
        "-Dcruise-pack.work-dir={{ user.home }}/.cruise-pack",
        "-Dlog4j2.configurationFile=${svc.home}/config/log4j2.xml",
        "-Djava.util.logging.manager=org.apache.logging.log4j.jul.LogManager",
        "-Dspring.config.additional-location={{ user.home }}/.cruise-pack/config/application.properties"
    ]
}